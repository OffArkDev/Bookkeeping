<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.AccountsListActivity">



    <TextView
        android:id="@+id/accounts_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="32sp"
        android:textStyle="bold"
        android:text="@string/accounts_list" />

    <ListView
        android:id="@+id/accounts_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="4">
        <Button
            android:id="@+id/delete_account_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/button_account_delete"
            android:layout_weight="1"/>


        <Button
            android:id="@+id/add_account_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:adjustViewBounds="true"
            android:text="@string/add_account_button"

            />
        <Button
            android:id="@+id/button_cloud"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/button_cloud"
            android:layout_weight="1"/>



    </LinearLayout>

</android.support.v7.widget.LinearLayoutCompat>